<div class="container">

    <form action="{{ app.request.uri }}" class="form-horizontal"  method="POST" >
        <p>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label mr-2">  {{ form_label(form.firstname) }}</label>
            <div class="col-sm-4">  {{ form_widget(form.firstname) }}
                <small class="text-danger" for="firstname">{{ form_errors(form.firstname) }} </small></div>
        </div>

        <div class="form-group row">
            <label  class="col-sm-2 col-form-label mr-2">  {{ form_label(form.lastname) }}</label>
            <div class="col-sm-4"> {{ form_widget(form.lastname) }}
                <small class="text-danger" for="lastname">{{ form_errors(form.lastname) }}</small>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2"> {{ form_label(form.street_number) }}</label>
            <div class="col-sm-4">  {{ form_widget(form.street_number) }}
               <small class="text-danger" for="street_number">{{ form_errors(form.street_number) }}</small>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.zip) }}</label>
            <div class="col-sm-4"> {{ form_widget(form.zip) }}
                <small class="text-danger" for="zip">{{ form_errors(form.zip) }}</small></div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.phonenumber) }}</label>
            <div class="col-sm-4"> {{ form_widget(form.phonenumber) }}
                <small class="text-danger" for="phonenumber">{{ form_errors(form.phonenumber) }}</small></div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.birthday) }}</label>
            <div class="col-sm-4"> {{ form_widget(form.birthday) }}
                <small class="text-danger" for="birthday">{{ form_errors(form.birthday) }}</small></div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.email) }}</label>
            <div class="col-sm-4">  {{ form_widget(form.email) }}
                <small class="text-danger" for="email">{{ form_errors(form.email) }}</small></div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.city) }}</label>
            <div class="col-sm-4">  {{ form_widget(form.city) }}
                <small class="text-danger" for="city">{{ form_errors(form.city) }}</small></div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label mr-2">  {{ form_label(form.country) }}</label>
            <div class="col-sm-4"> {{ form_widget(form.country) }}
                <small class="text-danger" for="country">{{ form_errors(form.country) }}</small></div>
        </div>

        {{ form_row(form._token) }}

        <button type="submit" id="form_save" name="form[save]" class="btn btn-primary">Save</button>
        </p>
    </form>
</div>
